<section>
	<h2>Create New Post</h2>

	<form class="new-post-form" action="/api/posts/profile"  method="post" enctype="multipart/form-data">
		<div>
			<label for="post-title">Travel Location</label>
			<input type="text" id="post-title" name="title" placeholder="City, State/Country" />
		</div>
		<div>
			<label for="post_url">Blog or Travel Website Link</label>
			<input id="post-url" name="post_url" placeholder="www.travel.com" />
		</div>
		 <input type="file" name="avatar" />
		<br>
		<button type="submit" class="btn">Submit Post</button>

	</form>
</section>
<br>
<br>
{{#if posts.length}}
<section>
	<h3>My Trips</h3>
	<ol>
		{{#each posts as |post|}}
		<li>
			{{> post-info post}}
			<a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit or Delete Post</a>
		</li>
		{{/each}}
	</ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>